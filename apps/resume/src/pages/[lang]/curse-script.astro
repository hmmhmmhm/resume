---
import CommonHead from "@/components/common-head.astro";
import CommonBody from "@/components/common-body.astro";
import CurseScriptPage from "@/components/curse-script-page.tsx";
import "@/styles/global.css";

const pageTitle = "Curse Script - JavaScript Obfuscator";
const pageDescription = "A JavaScript obfuscator that converts code into cursed spell-like syntax using ancient characters";
const lang = Astro.params.lang || "en";
const ogImage = new URL(`/en/curse-code/og.png`, Astro.url).toString();
---

<html lang={lang}>
  <head>
    <CommonHead title={pageTitle} description={pageDescription} lang={lang} ogImage={ogImage} />
  </head>
  <body class="bg-black overflow-x-hidden">
    <CommonBody lang={lang} />
    <div class="max-w-[1500px] mx-auto w-full">
      <CurseScriptPage client:only="react" />
    </div>
  </body>
</html>
