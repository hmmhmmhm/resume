---
import CommonHead from "@/components/common-head.astro";
import CommonBody from "@/components/common-body.astro";
import PseudoShufflePage from "@/components/pseudo-shuffle-page.tsx";
import Navbar from "@/components/navbar";
import { initI18n, extractNavbarTranslations } from "@/i18n";
import "@/styles/global.css";

const { language, t } = initI18n(Astro);
const navbarTranslations = extractNavbarTranslations(t);

const pageTitle = t.sideProjects?.pseudoShuffle?.pageTitle || (language === "ko"
  ? "Pseudo Shuffle - FPE 동형암호화 기반 유사난수 셔플 라이브러리"
  : "Pseudo Shuffle - FPE-Based Pseudo-Random Shuffle Library");
const pageDescription = t.sideProjects?.pseudoShuffle?.pageDescription || (language === "ko"
  ? "실제로 섞지 않고도 섞인 것처럼 보이는 인덱스를 계산하는 TypeScript 라이브러리"
  : "A TypeScript library that calculates shuffled-looking indices without actually shuffling");
const lang = Astro.params.lang || "ko";
const ogImage = new URL(`/${lang}/pseudo-shuffle/og.png`, Astro.url).toString();
---

<html lang={language}>
  <head>
    <CommonHead title={pageTitle} description={pageDescription} lang={language} ogImage={ogImage} />
    <script is:inline>
      // Force dark theme
      (function () {
        document.documentElement.classList.add("dark");
        localStorage.setItem("theme", "dark");
      })();
    </script>
  </head>
  <body class="bg-black overflow-x-hidden">
    <CommonBody lang={language} />
    <div class="max-w-[1500px] mx-auto w-full">
      <PseudoShufflePage client:only="react" lang={lang} />
    </div>
    <Navbar client:idle lang={language} translations={navbarTranslations} />
  </body>
</html>
