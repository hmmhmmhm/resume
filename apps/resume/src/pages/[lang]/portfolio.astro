---
import CommonHead from "@/components/common-head.astro";
import CommonBody from "@/components/common-body.astro";
import SlideDeck from "@/components/slide-deck";
import Navbar from "@/components/navbar";
import "@/styles/global.css";

import { initI18n } from "@/i18n";

const { language, t } = initI18n(Astro);

const pageTitle = "Portfolio - Hamin Lee";
const pageDescription = "Software 3.0 - The Era of LLM-Programmable Systems";
---

<html lang="ko">
  <head>
    <CommonHead title={pageTitle} description={pageDescription} lang="ko" />
    <script is:inline>
      // Initialize theme before page renders to prevent flash
      (function () {
        const theme = localStorage.getItem("theme");
        // Default to dark theme if no preference is saved
        if (theme === "dark" || !theme) {
          document.documentElement.classList.add("dark");
          if (!theme) {
            localStorage.setItem("theme", "dark");
          }
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body>
    <CommonBody lang="ko" />
    <SlideDeck client:only="react" />
    <Navbar client:idle />
  </body>
</html>
