---
import CommonHead from "@/components/common-head.astro";
import CommonBody from "@/components/common-body.astro";
import EdgeCryptoPage from "@/components/edge-crypto-page.tsx";
import Navbar from "@/components/navbar";
import KakaoBrowserEscape from "@/components/kakao-browser-escape";
import { initI18n, extractNavbarTranslations } from "@/i18n";
import "@/styles/global.css";

const { language, t } = initI18n(Astro);
const navbarTranslations = extractNavbarTranslations(t);

const pageTitle = t.sideProjects?.edgeCrypto?.pageTitle || (language === "ko"
  ? "Edge Crypto - Universal SubtleCrypto toolkit"
  : "Edge Crypto - Universal SubtleCrypto Toolkit");
const pageDescription = t.sideProjects?.edgeCrypto?.pageDescription || "Encrypt, sign, hash, and manage RSA keys across Node.js, browsers, Cloudflare Workers, Deno, and Bun.";
const lang = Astro.params.lang || "en";
const ogImage = new URL(`/${lang}/edge-crypto/og.png`, Astro.url).toString();
---

<html lang={language}>
  <head>
    <CommonHead title={pageTitle} description={pageDescription} lang={language} ogImage={ogImage} />
    <script is:inline>
      // Force dark theme
      (function () {
        document.documentElement.classList.add("dark");
        localStorage.setItem("theme", "dark");
      })();
    </script>
  </head>
  <body class="bg-black overflow-x-hidden">
    <CommonBody lang={language} />
    <KakaoBrowserEscape client:only="preact" />
    <div class="max-w-[1500px] mx-auto w-full">
      <EdgeCryptoPage client:only="react" lang={lang} />
    </div>
    <Navbar client:idle lang={language} translations={navbarTranslations} />
  </body>
</html>
